<div class="row justify-content-center">
    <div class="col-lg-8">
        <h1>Welcome<% if (name) { %>, <%= name %><% } %>!</h1>

        <% if (success) { %>
            <div class="alert alert-success" role="alert">
                <%= success %>
            </div>
        <% } %>
        
        <% if (error) { %>
            <div class="alert alert-danger" role="alert">
                <%= error %>
            </div>
        <% } %>

        <div class="dashboard-section">
            <h2>Account Status</h2>
            <div class="status-info">
                <p>
                    <strong>Email:</strong> 
                    <span class="text-secondary"><%= email %></span>
                </p>
                <p>
                    <strong>Phone Status:</strong> 
                    <% if (verified) { %>
                        <span class="verified">✓ Verified (<%= phone %>)</span>
                    <% } else if (phone) { %>
                        <span class="unverified">Pending Verification (<%= phone %>)</span>
                    <% } else { %>
                        <span class="unverified">Not Registered</span>
                    <% } %>
                </p>
                <% if (name) { %>
                    <p>
                        <strong>Name:</strong>
                        <span class="text-secondary"><%= name %></span>
                    </p>
                <% } %>
            </div>
        </div>

        <% if (!verified) { %>
            <div class="dashboard-section">
                <% if (!phone) { %>
                    <h2>Register Phone Number</h2>
                    <p class="text-muted mb-4">Please verify your phone number to start using Voice AI.</p>
                    
                    <form action="/register-phone" method="POST">
                        <div class="form-group mb-4">
                            <label class="form-label" for="phone">Phone Number</label>
                            <input type="tel" id="phone" name="phone" class="form-control" placeholder="+1234567890" required>
                            <div class="form-text text-muted">Enter your phone number in international format</div>
                        </div>
                        <button type="submit" class="btn btn-primary">Register Phone</button>
                    </form>
                <% } else { %>
                    <h2>Verify Phone Number</h2>
                    <p class="text-muted mb-4">Enter the verification code sent to <%= phone %></p>
                    
                    <form action="/verify-phone" method="POST">
                        <div class="form-group mb-4">
                            <label class="form-label" for="code">Verification Code</label>
                            <input type="text" id="code" name="code" class="form-control" placeholder="Enter code" required>
                        </div>
                        <button type="submit" class="btn btn-primary">Verify Phone</button>
                    </form>
                <% } %>
            </div>
        <% } else { %>
            <div class="dashboard-section">
                <h2>Voice AI Status</h2>
                <div class="status-info">
                    <p class="verified mb-2">✓ Your phone number is verified and ready to use with Voice AI</p>
                    <p class="text-secondary">You can now make calls from: <%= phone %></p>
                </div>
                <div class="mt-4">
                    <a href="/call-history" class="btn btn-primary">View Call History</a>
                </div>
            </div>
        <% } %>
    </div>
</div>
